@model IEnumerable<bazar_prg.Models.Productos>

@{
  <br>
    ViewData["Title"] = "LO MEJOR EN NUESTRO BAZAR";  
}
     <link rel="stylesheet" href="~/css/catalogo.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/js/catalogo.js" asp-append-version="true" />
<div style="text-align:center;">
<h1>@ViewData["Title"]</h1>
</div>


  <div class="container">

    <h1>@ViewData["Message"]</h1>
        <br>
    <div class="row">

      <div class="col">

        <div id="products" class="mb-3">
        <center> <div class="row">
            @foreach (var item in Model) { //tantos items tenga se organizar√°
            <div class="col-sm-4">

              <div class="card" >

                <div class="card-body">
                  <div class="card-img-actions">
                    <img class="img-responsive" width="120" height="150"
                       src="/images/@item.ImageName" alt="@item.ImageName"  />
                  </div>

                </div>


                <div >
                  <h5 style="color:rgb(0,0,0);" >@Html.DisplayFor(modelItem => item.Name)</h5>
                  <p style="color:rgb(0,0,0);">@Html.DisplayFor(modelItem => item.Precio)</p>
                  <a class="w-10 btn btn-lg btn-primary" asp-action="Add" asp-route-id="@item.Id">Agregar</a>
                  <a class="w-10 btn btn-lg btn-primary" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                  
                </div>
                <br>
              </div>
<br>
            </div>
            <br>
            }

         </div>
                <br>

        </div>

      </div>

    </div>

  </div> 